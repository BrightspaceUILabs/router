{
  "author": "D2L Corporation",
  "license": "Apache-2.0",
  "name": "@brightspace-ui-labs/lit-router",
  "description": "",
  "main": "router.js",
  "repository": "https://github.com/BrightspaceUILabs/router.git",
  "scripts": {
    "test": "npm run lint && npm run test:headless",
    "lint": "eslint --ext .js,.html . --ignore-path .gitignore && prettier \"**/*.js\" --check --ignore-path .gitignore",
    "format": "eslint --ext .js,.html . --fix --ignore-path .gitignore && prettier \"**/*.js\" --write --ignore-path .gitignore",
    "test:headless": "web-test-runner --files \"./test/**/*.test.js\" --node-resolve",
    "test:headless:watch": "web-test-runner --files \"./test/**/*.test.js\" --node-resolve --watch",
    "test:headless:ci": "web-test-runner --files \"./test/**/*.test.js\" --playwright --browsers chromium firefox webkit",
    "prettier:write": "prettier \"**/*.js\" --write --ignore-path .gitignore",
    "start": "web-dev-server --node-resolve --open --watch --app-index example/index.html"
  },
  "version": "2.1.0",
  "dependencies": {
    "lit": "^2",
    "page": "^1"
  },
  "devDependencies": {
    "@open-wc/eslint-config": "^4",
    "@open-wc/testing": "^3",
    "@web/dev-server": "^0.1",
    "@web/test-runner": "^0.15",
    "deepmerge": "^4.2.2",
    "eslint": "^8",
    "eslint-config-prettier": "^7",
    "husky": "^4.3.8",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1"
  },
  "prettier": {
    "singleQuote": true,
    "arrowParens": "avoid",
    "tabWidth": 4
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "router.js",
    "RouteReactor.js"
  ]
}
