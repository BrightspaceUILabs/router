{
  "author": "D2L Corporation",
  "license": "Apache-2.0",
  "name": "@brightspace-ui-labs/lit-router",
  "description": "",
  "main": "router.js",
  "repository": "https://github.com/BrightspaceUILabs/router.git",
  "scripts": {
    "test": "web-test-runner --coverage",
    "lint": "eslint --ext .js,.html . --ignore-path .gitignore && prettier \"**/*.js\" --check --ignore-path .gitignore",
    "format": "eslint --ext .js,.html . --fix --ignore-path .gitignore && prettier \"**/*.js\" --write --ignore-path .gitignore",
    "test:watch": "web-test-runner --watch",
    "test:sauce": "karma start karma.sauce.conf.js",
    "test:karma:watch": "karma start karma.conf.js --auto-watch=true --single-run=false",
    "prettier:write": "prettier \"**/*.js\" --write --ignore-path .gitignore",
    "start": "web-dev-server --node-resolve --open --watch --app-index example/index.html"
  },
  "version": "1.0.0",
  "dependencies": {
    "@brightspace-ui/core": "^1.131.2",
    "@open-wc/dedupe-mixin": "^1.3.0",
    "lit-element": "^2.5.1",
    "lit-html": "^1.4.1",
    "page": "^1.11.6"
  },
  "devDependencies": {
    "@open-wc/eslint-config": "^4.3.0",
    "@open-wc/testing": "^2.5.33",
    "@open-wc/testing-karma": "^4.0.9",
    "@web/dev-server": "^0.1.17",
    "@web/test-runner": "^0.12.20",
    "deepmerge": "^4.2.2",
    "eslint": "^7.26.0",
    "eslint-config-prettier": "^7.2.0",
    "husky": "^4.3.8",
    "karma": "^5.2.3",
    "karma-sauce-launcher": "^4.3.6",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1"
  },
  "prettier": {
    "singleQuote": true,
    "arrowParens": "avoid",
    "tabWidth": 4
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "router.js",
    "RouteReactor.js"
  ]
}
